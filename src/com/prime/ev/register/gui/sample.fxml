                  <StackPane style="-fx-border-width: 10;">
                     <children>
                        <ImageView fitHeight="200.0" fitWidth="250.0" pickOnBounds="true" VBox.vgrow="NEVER">
                           <image>
                              <Image url="@../../../../../../../../Desktop/bb/image.jpg" />
                           </image>
                        </ImageView>
                     </children>
                  </StackPane>
                  <Button mnemonicParsing="false" text="Capture" />
                  <Separator prefWidth="200.0" />
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
   <bottom>
      <Button mnemonicParsing="false" text="Register" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin></Button>
   </bottom>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
