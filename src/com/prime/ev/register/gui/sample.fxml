                                    <Insets />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="30.0">
                           <children>
                              <Label text="Gender" />
                              <RadioButton mnemonicParsing="false" text="Male" />
                              <RadioButton mnemonicParsing="false" text="Female" />
                           </children>
                        </HBox>
                        <DatePicker promptText="Date of Birth" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </VBox>
                  <VBox spacing="10.0">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <children>
                        <TextField promptText="Email" />
                        <TextField promptText="Phone" />
                        <TextField promptText="Occupation" />
                     </children>
                  </VBox>
                  <VBox spacing="10.0">
